<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Scandiweb\Slider\Block\Adminhtml\Slider\Edit" name="slider_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Scandiweb\Slider\Block\Adminhtml\Slider\Edit\Tabs" name="slider_edit_tabs">
                <block class="Scandiweb\Slider\Block\Adminhtml\Slider\Edit\Tab\Slider" name="slider_edit_tab_slider"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general_section</argument>
                    <argument name="block" xsi:type="string">slider_edit_tab_slider</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">slide_section</argument>
                    <argument name="block" xsi:type="array">
                        <item name="label" xsi:type="string">Manage slides</item>
                        <item name="title" xsi:type="string">Manage slides</item>
                        <item name="url" xsi:type="helper" helper="Scandiweb\Slider\Helper\Data::slidesGridUrl"/>
                        <item name="class" xsi:type="string">ajax</item>
                    </argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
